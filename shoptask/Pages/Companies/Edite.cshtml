@page
@model shoptask.Pages.Companies.EditeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Company</span>
        </div>

        <div>
            <form method="post" class="row">
                <div class="mb-3">
                    <label asp-for="Company.Name" for="" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Company.Name"
                           class="form-control"
                           placeholder="" />
                    <span asp-validation-for="Company.Name" class="text-danger"></span>

                </div>
                <input hidden asp-for="Company.Id" />
                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>